<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".core.auth.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@android:color/white"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/banner"
                    android:gravity="center">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_picture"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_avatar"
                        app:civ_border_color="@color/colorPrimaryDark"
                        app:civ_border_width="4dp" />

                    <TextView
                        style="@style/TextWithShadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:padding="4dp"
                        android:text="@string/user_name_default"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        style="@style/TextWithShadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/user_email_default"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <TableRow android:background="@color/table_dark_bg">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="@dimen/account_content_padding"
                            android:text="@string/address"
                            android:textColor="@color/textColorPrimerLight"
                            android:textSize="@dimen/table_content_size" />

                        <TextView
                            android:id="@+id/transaction_invoice"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:padding="@dimen/account_content_padding"
                            android:text="@string/address_default"
                            android:textColor="@color/textColorPrimerLight"
                            android:textSize="@dimen/table_content_size" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="@dimen/account_content_padding"
                            android:text="@string/school"
                            android:textColor="@color/textColorPrimerLight"
                            android:textSize="@dimen/table_content_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:padding="@dimen/account_content_padding"
                            android:text="@string/school_default"
                            android:textColor="@color/textColorPrimerLight"
                            android:textSize="@dimen/table_content_size" />
                    </TableRow>

                    <TableRow android:background="@color/table_dark_bg">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="@dimen/account_content_padding"
                            android:text="@string/phone"
                            android:textColor="@color/textColorPrimerLight"
                            android:textSize="@dimen/table_content_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:padding="@dimen/account_content_padding"
                            android:text="@string/phone_default"
                            android:textColor="@color/textColorPrimerLight"
                            android:textSize="@dimen/table_content_size" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="@dimen/account_content_padding"
                            android:text="@string/account"
                            android:textColor="@color/textColorPrimerLight"
                            android:textSize="@dimen/table_content_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:padding="@dimen/account_content_padding"
                            android:text="@string/account_default"
                            android:textColor="@color/textColorPrimerLight"
                            android:textSize="@dimen/table_content_size" />

                    </TableRow>

                    <TableRow android:background="@color/table_dark_bg">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="@dimen/account_content_padding"
                            android:text="@string/credit"
                            android:textColor="@color/textColorPrimerLight"
                            android:textSize="@dimen/table_content_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:padding="@dimen/account_content_padding"
                            android:text="@string/credit_default"
                            android:textColor="@color/textColorPrimerLight"
                            android:textSize="@dimen/table_content_size" />

                    </TableRow>

                </TableLayout>

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:background="@drawable/action_button"
                    android:elevation="4dp">

                    <Button
                        android:id="@+id/claim_button"
                        style="?android:textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="@string/claim"
                        android:textColor="@android:color/primary_text_dark"
                        android:textStyle="bold" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
