<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/ranking_urut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_size_padding"
                    android:gravity="center"
                    android:text="Ranking #1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/table_title_size" />

            </FrameLayout>


            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:padding="@dimen/table_content_padding"
                        android:text="ID Peserta"
                        android:textSize="@dimen/table_content_size" />

                    <TextView
                        android:id="@+id/ranking_id_peserta"
                        android:padding="@dimen/table_content_padding"
                        android:text="****123456"
                        android:textSize="@dimen/table_content_size" />

                </TableRow>


                <TableRow android:background="@color/table_dark_bg">

                    <TextView
                        android:layout_column="1"
                        android:padding="@dimen/table_content_padding"
                        android:text="Nilai TWK (minimal 75)"
                        android:textSize="@dimen/table_content_size" />

                    <TextView
                        android:id="@+id/ranking_nilai_twk"
                        android:padding="@dimen/table_content_padding"
                        android:text="10"
                        android:textSize="@dimen/table_content_size" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:padding="@dimen/table_content_padding"
                        android:text="Nilai TIU (minimal 80)"
                        android:textSize="@dimen/table_content_size" />

                    <TextView
                        android:id="@+id/ranking_nilai_tiu"
                        android:padding="@dimen/table_content_padding"
                        android:text="0"
                        android:textSize="@dimen/table_content_size" />

                </TableRow>

                <TableRow android:background="@color/table_dark_bg">

                    <TextView
                        android:layout_column="1"
                        android:padding="@dimen/table_content_padding"
                        android:text="Nilai Tkp (minimal 143)"
                        android:textSize="@dimen/table_content_size" />

                    <TextView
                        android:id="@+id/ranking_nilai_tkp"
                        android:padding="@dimen/table_content_padding"
                        android:text="0"
                        android:textSize="@dimen/table_content_size" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:padding="@dimen/table_content_padding"
                        android:text="Nilai Total"
                        android:textSize="@dimen/table_content_size" />

                    <TextView
                        android:id="@+id/ranking_nilai_total"
                        android:padding="@dimen/table_content_padding"
                        android:text="0"
                        android:textSize="@dimen/table_content_size" />

                </TableRow>

                <TableRow android:background="@color/table_dark_bg">

                    <TextView
                        android:layout_column="1"
                        android:padding="@dimen/table_content_padding"
                        android:text="Ambang Batas"
                        android:textSize="@dimen/table_content_size" />

                    <TextView
                        android:id="@+id/ranking_ambang_batas"
                        android:padding="@dimen/table_content_padding"
                        android:text="Tidak"
                        android:textSize="@dimen/table_content_size" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
